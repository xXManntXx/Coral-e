<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/NavajoWhite">

    <TextView
        android:id="@+id/law_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/DarkGoldenrod"
        android:textSize="25dp"
        android:text="@string/law_default_name" />

    <TextView
        android:id="@+id/law_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Goldenrod"
        android:textSize="15dp"
        android:text="@string/law_default_content" />

</LinearLayout>